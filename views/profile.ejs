<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Animated Profile Card</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/profile.css">
   
</head>
<body>

  <!-- Profile Section -->
  <div class="profile-card">
    <img src="data:image/png;base64," alt="Profile Picture">
    <h3></h3>
    <p><%=User.username%></p>
    <div class="extra-info">
      <p>Followers: ?</p>
      <p>Following: ?</p>
      <p>Joined: date</p>
    </div>
    <a href="/logout" class="button">logout</a>

    <form action="/upload" method="POST" enctype="multipart/form-data">
      <input type="text" name="filecaption" placeholder="some caption">
      <input type="file" name="file">
      <button type="submit">upload</button>
    </form>
  </div>
  <div class="card">
    <% User.posts.forEach(function(post){ %>
      <div class="card", style="width: 18rem;">
        <img src="/images/uploads/<%= post.image %>"
        class="card-img-top">
        <div class="card-body">
          <h5 class="card-title"><%= post.imageText %></h5>
          <p class="card-text"></p>
        </div>
      </div>
  </div>
  <% }) %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>